@model RegisterVm 

 <div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
      <div class="content-wrapper d-flex align-items-stretch auth auth-img-bg">
        <div class="row flex-grow">
          <div class="col-lg-6 d-flex align-items-center justify-content-center">
            <div class="auth-form-transparent text-left p-3">
              <h4>REGISTER</h4>
              <div asp-validation-summary="ModelOnly" class="text-danger"></div>
              <form class="pt-3" method="post">
                <div class="form-group">
                  <label asp-for="Name">Name</label>
                  <div class="input-group">
                    <div class="input-group-prepend bg-transparent">
                      <span class="input-group-text bg-transparent border-right-0">
                        <i class="mdi mdi-account-outline text-primary"></i>
                      </span>
                    </div>
                    <input asp-for="Name" type="text" class="form-control form-control-lg border-left-0" placeholder="Name">
                    <span class="text-danger" asp-validation-for="Name"></span>
                  </div>
                </div>
                <div class="form-group">
                  <label asp-for="Surname">Surname</label>
                  <div class="input-group">
                    <div class="input-group-prepend bg-transparent">
                      <span class="input-group-text bg-transparent border-right-0">
                        <i class="mdi mdi-account-outline text-primary"></i>
                      </span>
                    </div>
                    <input asp-for="Surname" type="text" class="form-control form-control-lg border-left-0" placeholder="Surname">
                    <span class="text-danger" asp-validation-for="Name"></span>
                  </div>
                </div>
                <div class="form-group">
                  <label asp-for="Username">Username</label>
                  <div class="input-group">
                    <div class="input-group-prepend bg-transparent">
                      <span class="input-group-text bg-transparent border-right-0">
                        <i class="mdi mdi-account-outline text-primary"></i>
                      </span>
                    </div>
                    <input asp-for="Username" type="text" class="form-control form-control-lg border-left-0" placeholder="Username">
                    <span class="text-danger" asp-validation-for="Username"></span>
                  </div>
                </div>
                <div class="form-group">
                  <label asp-for="Email">Email</label>
                  <div class="input-group">
                    <div class="input-group-prepend bg-transparent">
                      <span class="input-group-text bg-transparent border-right-0">
                        <i class="mdi mdi-email-outline text-primary"></i>
                      </span>
                    </div>
                    <input asp-for="Email" type="email" class="form-control form-control-lg border-left-0" placeholder="Email">
                    <span class="text-danger" asp-validation-for="Email"></span>
                  </div>
                </div>
                <div class="form-group">
                  <label asp-for="Password">Password</label>
                  <div class="input-group">
                    <div class="input-group-prepend bg-transparent">
                      <span class="input-group-text bg-transparent border-right-0">
                        <i class="mdi mdi-lock-outline text-primary"></i>
                      </span>
                    </div>
                    <input asp-for="Password" type="password" class="form-control form-control-lg border-left-0" id="exampleInputPassword" placeholder="Password">    
                    <span class="text-danger" asp-validation-for="Password"></span>
                  </div>
                </div>
                            <div class="form-group">
                                <label asp-for="ConfirmPassword">ConfirmPassword</label>
                                <div class="input-group">
                                    <div class="input-group-prepend bg-transparent">
                                        <span class="input-group-text bg-transparent border-right-0">
                                            <i class="mdi mdi-lock-outline text-primary"></i>
                                        </span>
                                    </div>
                                    <input asp-for="ConfirmPassword" type="password" class="form-control form-control-lg border-left-0" id="exampleInputPassword" placeholder="ConfirmPassword">
                                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                                </div>
                            </div>
                <div class="mb-4">
                  <div class="form-check">
                    <label class="form-check-label text-muted">
                      <input type="checkbox" class="form-check-input">
                      I agree to all Terms & Conditions
                    </label>
                  </div>
                </div>
                <div class="mt-3">
                  <button class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">SIGN UP</button>
                </div>
                <div class="text-center mt-4 font-weight-light">
                  Already have an account? <a asp-action="login" asp-controller="account" class="text-primary">Login</a>
                </div>
              </form>
            </div>
          </div>
          <div class="col-lg-6 register-half-bg d-flex flex-row">
            <p class="text-white font-weight-medium text-center flex-grow align-self-end">Copyright &copy; 2020  All rights reserved.</p>
          </div>
        </div>
      </div>
      <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
  </div>